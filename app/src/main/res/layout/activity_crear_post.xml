<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/background"
    tools:context=".CrearPostActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Nueva Publicación"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <!-- Campo para escribir el texto del post -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_post_text"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:boxCornerRadiusTopStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxStrokeColor="#800020"
        app:hintTextColor="#800020">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_post_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="¿Qué estás pensando?"
            android:gravity="top"
            android:inputType="textMultiLine|textCapSentences"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Contenedor para la imagen seleccionada y el botón -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <!-- Vista previa de la imagen seleccionada -->
        <ImageView
            android:id="@+id/iv_post_image_preview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:src="@tools:sample/backgrounds/scenic"
            android:layout_alignParentStart="true"
            android:contentDescription="Vista previa de la imagen"/>

        <!-- Botón para quitar la imagen seleccionada -->
        <ImageButton
            android:id="@+id/btn_remove_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close_circle"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/black"
            android:backgroundTint="#A0FFFFFF"
            android:layout_alignTop="@id/iv_post_image_preview"
            android:layout_alignEnd="@id/iv_post_image_preview"
            android:layout_margin="4dp"
            android:visibility="gone"
            android:contentDescription="Quitar imagen"/>


        <!-- Botón para seleccionar imagen -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_select_image"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir foto"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:icon="@drawable/ic_add_photo"
            android:textColor="#800020"
            app:iconTint="#800020"/>

    </RelativeLayout>

    <!-- Botón para publicar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_publish_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publicar"
        android:layout_marginTop="20dp"
        app:cornerRadius="50dp"
        app:backgroundTint="#800020"/>

</LinearLayout>