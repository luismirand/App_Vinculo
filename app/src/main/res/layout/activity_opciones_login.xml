<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".OpcionesLogin">

    <!-- Encabezado -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BINKU"
            android:textColor="@color/guinda"
            android:textSize="60sp"
            android:fontFamily="@font/font_bold"/>

    </LinearLayout>

    <!-- Tarjeta inferior con botones -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <!-- Botón con correo -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/Ingresar_email"
                android:text="@string/Ingresar_email"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m_button_height"
                android:layout_marginTop="10dp"
                app:icon="@drawable/ic_mail"
                app:iconSize="25dp"
                app:iconTint="@android:color/white"
                app:iconPadding="12dp"
                app:backgroundTint="#800020" />

            <!-- Botón con Google -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/Ingresar_google"
                android:text="@string/Ingresar_google"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m_button_height"
                android:layout_marginTop="20dp"
                app:cornerRadius="50dp"
                app:icon="@drawable/ic_google"
                app:iconSize="20dp"
                app:iconTint="@android:color/white"
                app:iconPadding="12dp"
                app:backgroundTint="#800020" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
